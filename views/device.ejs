<div class="row justify-content-start">
    <div class="col-sm-6">
        <div class="form-switch">
            <input class="form-check-input" type="checkbox" id="about-device">
            <label class="form-check-label" for="about-device">
                Get specification device
            </label>
        </div>
        <div class="form-switch">
            <input class="form-check-input" checked type="checkbox" id="index-device">
            <label class="form-check-label" for="index-device">
                Use indexing detect device
            </label>
        </div>
    </div>
</div>

<div class="row justify-content-start">
    <div class="col-12">
        <!-- <button id="relaod" class="btn btn-primary">
          get random useragent
        </button> -->
    </div>
    <div class="col-12">
        <div class="mb-3">
            <div class="mb-1">
                <a href="#" id="current-ua" class="btn btn-sm btn-dark">get current UA</a>
                <a href="#" id="random-ua" class="btn btn-sm btn-dark">get random UA</a>
            </div>
            <div class="form-floating mb-3">
                            <textarea style="min-height: 150px;" class="form-control" id="useragent-input"
                                      rows="10"></textarea>
                <label for="useragent-input">Useragent</label>
            </div>
            <div class="mb-1">
                <a href="#" id="request-headers" class="btn btn-sm btn-dark">get headers</a>
                <a href="#" id="clean-headers" class="btn btn-sm btn-dark">clean headers</a>
            </div>

            <div class="form-floating mb-3">
                            <textarea style="min-height: 150px;" class="form-control" id="headers-input"
                                      rows="10"></textarea>
                <label for="headers-input">Headers</label>
            </div>

            <div class="row justify-content-start">
                <div class="col-sm-4">
                    <button id="detect" class="btn btn-primary">
                        detect
                    </button>
                </div>
            </div>
        </div>
    </div>

    <hr>

    <div class="mb-2">
        Detect device <span class="badge badge-dark" id="time-device-result">0 ms</span>
        Detect bot <span class="badge badge-dark" id="time-bot-result">0 ms</span>
    </div>

    <div id="output"></div>

</div>